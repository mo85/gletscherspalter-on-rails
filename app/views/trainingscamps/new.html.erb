<h1>Trainingslager Erstellen</h1>

<% form_for @event, :html => { :class => :default } do |f| %>
	<%= f.error_messages %>
	
	<div>
		<%= f.label "Datum" %>
		<%= f.datetime_select :date %>
	</div>
	
	<div>
		<%= f.label "Ort" %>
		<%= f.text_field :locality %>
	</div>
	
	<div>
		<%= f.label "Notiz" %>
		<%= f.text_area :note %>
	</div>
	
	<div>
		<%= f.submit "Speichern" %>
	</div>
<% end %>

