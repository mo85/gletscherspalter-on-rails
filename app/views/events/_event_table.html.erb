<table class="default">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Anlass</th>
      <th>Ort</th>
      <th>Anmerkung</th>
			<% if actions %>
				<th>&nbsp;</th>
			<% end %>
    </tr>
  </thead>

  <tbody>
    <% for event in events %>
        <tr>
          <td><%= event.date_formatted %></td>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.note %></td>
					<% if actions %>
					<td><%= link_to image_tag('icons/pencil.png', :border => 0), edit_event_path(event) %>
							<%= link_to image_tag('icons/delete.png', :border => 0), event, :confirm => "Möchten sie diese Veranstaltung wirklich löschen?", :method => :delete %>
					</td>
					<% end %>
        </tr>
    <% end %>
  </tbody>
</table>
