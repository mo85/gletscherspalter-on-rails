<% unless events.empty? %>

<h2>Veranstaltungen</h2>
<table class="default">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Anlass</th>
      <th>Ort</th>
      <th>Anmerkung</th>
    </tr>
  </thead>

  <tbody>
    <% for event in events %>
        <tr>
          <td><%= event.date_formatted %></td>
          <td><%= event.title %></td>
          <td><%= event.location %></td>
          <td><%= event.note %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<% end %>