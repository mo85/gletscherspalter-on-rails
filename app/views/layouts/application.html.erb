<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title><%= @title %></title>
<%= stylesheet_link_tag "screen" %>
<%= stylesheet_link_tag "header" %>
<%= stylesheet_link_tag "menu" %>
<%= stylesheet_link_tag "table" %>
<%= stylesheet_link_tag "gletscherspalter" %>
<%= stylesheet_link_tag "form" %>

<%= javascript_include_tag :defaults %>
</head>

<body>

<div id="wrapper">   

	<div id="header">

  	<%= image_tag("cam_ward.png", :id => "ward") %>
		
		<%= image_tag("/images/glen_wesley.png", :id => "wesley") %>
		
		<div id="title">
		<%= image_tag("/images/glet_title.png") %>
		</div>

		<div id="logged-in">
		<% if logged_in? %>
		 angemeldet als <%= user_name %>
		<% end %>
		</div>
   
	</div>
	
	<div>
		<ul id="menu">
			<li><%= link_to "Home" , root_path %></li>
			<% if user_has_role('active') %>
				<li><%= link_to "Mein Profil", player_path(current_user.player) %>
			<% end %>
			<li><%= link_to "Team", players_path %></li>
			<li><%= link_to "Saison", games_path %></li>
			<li><%= link_to "Orte", :controller => "root", :action => "locations" %></li>
	    <li><%= link_to "Kontakt", :controller => "root", :action => "contact" %></li>

			<% if user_has_role('admin') %>
	        <li onmouseover="$('admin_links').show()" onmousemove="$('admin_links').show()" onmouseout="$('admin_links').hide()"><%= link_to "Admin" %></li>
					<div id="admin_links" class="admin_menu" style="display: none;" onmouseover="$('admin_links').show();" onmousemove="$('admin_links').show()" onmouseout="$('admin_links').hide()">
						<ul>
							<li><%= link_to "Events", events_path %></li>
		        	<li><%= link_to "Benutzer", users_path %></li>
		        	<li><%= link_to "Austragungsorte", locations_path %></li>
		        	<li><%= link_to "Benutzerrollen", roles_path %></li>
						</ul>
					</div>
					<% end %>

	        <% if logged_in? %>
	            <li><%= link_to "Logout", :controller => "admin", :action => "logout" %></li>
	        <% else %>
			    <li><%= link_to "Login", :controller => "admin", :action => "login" %></li>
	        <% end %>
		</ul>
	</div>
	
	<div class="clear">
	</div>
	
	<div id="leftcolumn">
		<div id="news">
    	<h2>News</h2>
			<% next_event = Event.next_event %>
			<% next_game = Game.next_game %>
			
      <p>
        <b>Nächstes Event:</b> <br />
        <% if next_event != nil %>
          <b><%= next_event.date_formatted %></b><br />
          <b><%= next_event.title %></b>,
          <%= next_event.location %>
        <% else %>
        -
        <% end %>
      </p>
      <p>
        <b>Nächstes Spiel:</b> <br />
        <% if next_game != nil %>
        <%= next_game.date_formatted %>
        Gletscherspalter vs. <%= next_game.opponent %>
        <% else %>
        -
        <% end %>
      </p>

   		<p>
	   		<b>Letztes Spiel:</B> <br />
				Gletscherspalter vs.<br /> <% game = Game.last_game %><%= game.opponent %>: <%= game.result %>
	  	</p>
		</div>
 	</div>
 	<div id="rightcolumn">
		<% if flash[:notice] -%>
			<div id="notice"><%= flash[:notice] %></div>
		<% end -%>
		<%= yield :layout %>
	</div>

</div> 
</body>
</html>
