<h1>Spiel Editieren</h1>

<% form_for [@game], :html => {:class => :default} do |f| %>
  <%= f.error_messages %>

  <div>
	<%= f.label t('game.date') %>
	<%= f.datetime_select :date, :start_year => Time.now.year - 1, :end_year => Time.now.year + 1 %>
  </div>

  <div>
	<%= f.label "Ort" %>
	<%= f.collection_select(:rink_id, Rink.all, :id, :name, {:promt => "Select a location"}) %>
  </div>

  <div>
	<%= f.label "Gegner" %>
	<%= f.text_field :opponent %>
  </div>

  <div>
	<%= f.label :score, "erzielte Tore" %>
	<%= f.text_field :score %>
  </div>

	<div>
	<%= f.label :opponent_score, "Gegentore" %>
	<%= f.text_field :opponent_score %>	
	</div>

  <div>
    <%= f.submit "Anpassen" %>
  </div>
<% end %>

