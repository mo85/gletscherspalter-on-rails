<table class="default">
	<thead>
		<tr>
			<th>Zeitpunk</th>
			<th>Verfasser</th>
			<th>Nachricht</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<tbody>
		<% for message in @messages %>
			<tr>
				<td><%= message.updated_at ? format_date(message.updated_at) : format_date(message.created_at) %></td>
				<td><%= message.publisher.name %></td>
				<td><%= message.message %></td>
				<% if permitted_to? :manage, message %>
				<td>
		    <%= link_to(image_tag('icons/pencil.png', :border => 0), edit_message_path(message)) %>
		    <%= link_to(image_tag('icons/delete.png', :border => 0), messages_path, :confirm => 'Möchten sie diese Nachricht wirklich löschen?', :method => :delete) %>
				</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>