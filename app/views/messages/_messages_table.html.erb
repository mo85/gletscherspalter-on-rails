<table class="default">
	<thead>
		<tr>
			<th width="15%">Verfasser</th>
			<th width="55%">Nachricht</th>
			<th width="25%">Zeitpunkt</th>
			<th width="5%">&nbsp;</th>
		</tr>
	</thead>
	
	<tbody>
		<% for message in @messages %>
			<tr>
				<td class="author"><%=h message.publisher.name %></td>
				<td style="font-size: smaller;"><%=sanitize message.text %></td>
				<td class="date"><%=h format_date(message.created_at) %></td>
				<% if permitted_to? :manage, message %>
				<td>
		    <%= link_to(image_tag('icons/delete.png', :border => 0), message, :confirm => 'Möchten sie diese Nachricht wirklich löschen?', :method => :delete) %>
				</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>