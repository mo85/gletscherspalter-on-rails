<h1>Training Anpassen</h1>

<% form_for @training, :html => { :class => :default } do |f| %>
	
	<div>
		<%= f.label "Datum" %>
		<%= f.datetime_select :date %>
	</div>
	
	<div>
		<%= f.label "Ort" %>
		<%= f.collection_select(:location_id, Rink.all, :id, :name, {:promt => "Select a location"}) %>
	</div>
	
	<div>
		<%= f.label "Notiz" %>
		<%= f.text_area :note %>
	</div>
	
	<div>
		<%= f.submit "Anpassen" %>
	</div>
<% end %>

