<% include_tinymce %>
<h1>Gästebucheintrag Anpassen</h1>

<% form_for @note, :url => { :action => :update }, :html => { :class => :default } do |f| %>
	<%= f.error_messages %>
	
	<div>
		<%= f.label "Name" %>
		<%= f.text_field :author %>
	</div>
	
	<div>
		<%= f.label "Nachricht" %>
		<%= f.text_area :note %>
	</div>
	
	<div>
		<%= f.submit "Anpassen" %>
	</div>
<% end %>

<div class="links">
	<%= link_to "Zurück", guestnotes_path %>
</div>

<script type="text/javascript" charset="utf-8">
	tinyMCE.init({
		mode 					: "textareas",
		theme				 	: "advanced",
		theme_advanced_buttons1 : "bold, italic, underline, |, justifyleft, justifycenter, justifyright, justifyfull,|, fontselect, fontsizeselect, bullist, numlist, link",
		theme_advanced_buttons2 : "",
		theme_advanced_toolbar_location : "top",
		theme_advanced_toolbar_align : "left",
		convert_urls	: false,
	});
</script>