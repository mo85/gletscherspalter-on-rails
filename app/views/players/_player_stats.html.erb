<table class="default">
	<tr class="smaller">
		<th>&nbsp;</th>
		<th># Spiele</th>
		<th># Siege</th>
		<th># Niederlagen</th>
		<th># Unentschieden</th>
		<th>Tore</th>
		<th>Assists</th>
		<th><abbr title="Points per Game">PPG</abbr></th>
	</tr>
	
	<% @seasons.each do |s| %>
		<% if @player.games_played(s).size > 0 %>
			<tr>
				<td><%= s %></td>
				<td><%= @player.games_played(s).size %></td>
				<td><%= @player.wins(s) %></td>
				<td><%= @player.defeats(s) %></td>
				<td><%= @player.tied_games(s) %></td>
				<td><%= @player.goals(s) %></td>
				<td><%= @player.assists(s) %></td>
				<td><%= @player.points_per_game(s) %></td>
			</tr>
		<% end %>
	<% end %>

<% if Season.count > 1 %>
	<tr class="total">
		<td>Gesamt</td>
		<td><%= @player.games_played.size %></td>
		<td><%= @player.wins %></td>
		<td><%= @player.defeats %></td>
		<td><%= @player.tied_games %></td>
		<td><%= @player.goals %></td>
		<td><%= @player.assists %></td>
		<td><%= @player.points_per_game %></td>
	</tr>
<% end %>
</table>
