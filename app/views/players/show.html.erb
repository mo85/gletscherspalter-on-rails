<h1><%= @player.user.full_name %></h1>

<% form_for [@player], :html => {:class => :default} do |f| %>

	<div>
		<%= f.label :player, "Trikot Nummer:", :class => :bold %> 
		<%= @player.number %>
	</div>

	<div>
		<%= f.label :player, "Position:", :class => :bold %>
		<%= @player.position_as_string %>
	</div>
	
	<% if permitted_to? :adjust, :player %>
	<div>
		<%= link_to 'Anpassen', edit_player_path(@player) %>
	</div>
	<% end %>
	
<% end %>

<div id="my_games" style="margin-top: 20px;">
	<h2>Gebuchte Spiele</h2>
	
	<div style="margin-top: 10px">
		<table class="default">
			<tr>
				<th>Zeit</th>
				<th>Ort</th>
				<th>Gegner</th>
				<th>Resultat</th>
			</tr>

			<% for game in @player.games %>
				<tr>
					<td><%= game.date_formatted %></td>
					<td><%= game.rink.name %></td>
					<td><%= game.opponent %></td>
					<td><%= game.result %></td>
				</tr>
			<% end %>
		</table>
	</div>
	
	<% if permitted_to? :games, :player %>
	<div class="links">
		<%= link_to 'Weitere Spiele buchen', games_player_path %>
	</div>
	<% end %>
</div>