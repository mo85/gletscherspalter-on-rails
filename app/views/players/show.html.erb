<h1><%= @player.user.full_name %></h1>

<% form_for [@player], :html => {:class => :default} do |f| %>
	
	<div>
		<%= f.label :member_since, "Mitglied seit:", :class => :bold %>
		<%=h @player.member_since %>
	</div>
	
	<div>
		<%= f.label :player, "Trikot Nummer:", :class => :bold %> 
		<%=h @player.number %>
	</div>

	<div>
		<%= f.label :player, "Position:", :class => :bold %>
		<%=h @player.position_as_string %>
	</div>
	
<% end %>
<div class="clear"></div>

<div style="marin-top: 20px;">
	<h2>Statistiken</h2>
	
	<% if @player.position_as_string == 'Goalie' %>
		<%= render :partial => "goalie_stats", :locals => { :player => @player } %>
	<% else %>
		<%= render :partial => "player_stats", :locals => { :player => @player } %>
	<% end %>
	
</div>

<div id="my_games" style="margin-top: 20px;">
	<h2>Gebuchte Spiele</h2>
	
	<div style="margin-top: 10px">
		<%= render :partial => "games/game_table", :locals => { :games => @games, 
			:show_result => true, :show_actions => false, :check_box_needed => false }%>
		<div style="margin-top: 5px;">
			<hr/>
			<%= will_paginate @games %>
			<hr/>
		</div>
	</div>
	
	
</div>

<% if permitted_to?(:adjust, @player) || permitted_to?(:games, @player) %>
	<% content_for :sub_menu do %>
		<% if permitted_to? :adjust, @player %>
		<li class="side_bar"><%= link_to 'Spieler Details anpassen', edit_player_path(@player) %></li>
		<li class="side_bar"><%= link_to 'Spiele in Outlook einfÃ¼gen', games_player_url(:format => "ics", :protocol => "webcal", :token => current_user.token) %></li>
		<li class="side_bar"><%= link_to 'Spiele als PDF', games_player_path(:format => "pdf") %></li>
		<% end %>
		<% if permitted_to? :games, @player %>
		<li class="side_bar"><%= link_to 'Spiele verwalten', games_player_path %></li>
		<% end %>
	<% end %>
<% end %>