<h1>New player</h1>

<% form_for(@player) do |f| %>
  <%= f.error_messages %>
  
  <p>
	<%= f.label :number %><br />
	<%= f.text_field :number %>
  </p>
  
  <p>
	<%= f.label :position %><br />
	<%= f.select :position, PLAYER_POSITIONS, :promt => "Select a position" %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', players_path %>
