<h1>Lokation anpassen</h1>

<% form_for [@location], :html => {:class => :default}  do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= label_tag "Strasse" %>
    <%= text_field_tag "address[street]",@location.address.street ,:size => 30 %>
  </div>

  <div>
    <%= label_tag "Nummer" %>
    <%= text_field_tag "address[number]", @location.address.number, :size => 30 %>
  </div>

  <div>
    <%= label_tag "Stadt" %>
    <%= text_field_tag "address[city]", @location.address.city, :size => 30 %>
  </div>

  <div>
    <%= label_tag "Postleitzahl" %>
    <%= text_field_tag "address[zip]", @location.address.zip, :size => 30 %>
  </div>

  <div>
    <%= f.label "Eisfeld"%>
    <%= f.check_box :type, { :checked => @location.is_a?(Rink) ? true : false }, :rink, :location %>
  </div>
  <div>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.submit "Anpassen" %>
  </div>
<% end %>

<%= link_to 'Anzeigen', @location %> |
