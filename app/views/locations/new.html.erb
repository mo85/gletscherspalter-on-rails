<h1>Neue Lokation erfassen</h1>

<% form_for [@location], :html => {:class => :default} do |f| %>
  <%= f.error_messages %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label "Eisfeld" %>
    <%= f.check_box :type, {:checked => true}, :rink, :location %>
  </div>
  <div>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.submit "Erstellen" %>
  </div>
<% end %>

