  <%= f.error_messages %>

  <p>
	<%= f.label "Vorname" %><br />
	<%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label "Nachname" %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label "E-Mail" %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label "Benutzerrolle" %><br />
    <%= f.collection_select(:user_roles, Role.all, :id, :name, {:promt => true}) %>
  </p>

