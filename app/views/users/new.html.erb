<h1>Benutzer Erstellen</h1>

<% form_for [@user], :html => { :class => :default } do |f| %>
  <%= f.error_messages %>

  <div>
	<%= f.label "Vorname" %>
	<%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label "Nachname" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label "E-Mail" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label "Benutzerrolle" %>
    <%= f.collection_select(:user_roles, Role.all, :id, :name, {:promt => true}) %>
  </div>

  <div>
    <%= f.submit "Benutzer hinzufügen", :class => "submit" %>
  </div>
<% end %>

<div class="links">
	<%= link_to "Zurück", users_path %>
</div>

