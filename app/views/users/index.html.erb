<h1>Registrierte Benutzer</h1>

<table class="default">
  <tr>
		<th>Vorname</th>
    <th>Nachname</th>
		<th>Email</th>
		<th>&nbsp;</th>
  </tr>

<% for user in @users %>
  <tr>
		<td><%= user.first_name %></td>
    <td><%= user.name %></td>
		<td><%= user.email %></td>
    <% if user_has_role('admin')%>
	    <td>
			  <%= link_to image_tag('icons/pencil.png', :border => 0), edit_user_path(user) %>
			  <%= link_to image_tag('icons/delete.png', :border => 0), user, :confirm => "Möchten sie den Benutzer #{user.user_name} wirklich löschen?", :method => :delete %>
			</td>
		<% end %>
	</tr>
<% end %>
</table>

<div class="links">
	<% if user_has_role('admin') %>
	<%= link_to 'Neuen Benutzer erstellen', new_user_path %>
	<% end %>
</div>