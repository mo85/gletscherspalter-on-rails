<form class="default" method="post" action="/admin/login">
	<fieldset>
		<legend>Bitte geben Sie Ihren Benutzernamen und das Passwort ein.</legend>

		<div>
			<label for="name">Name:</label>
			<%= text_field_tag :user_name, params[:user_name] %>
		</div>
		
		<div>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
</form>
