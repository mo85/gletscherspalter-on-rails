<h1>Nachricht verfassen</h1>

<div style="margin-top: 10px;">
	<% form_for [@news], :url => {:action => "create"},:html => {:class => :default} do |f| %>
		<%= f.error_messages %>
	
	<div>
		<%= label_tag "Empfänger" %>
		<%= radio_button_tag :recipients, "all", true, { :onclick => "$('choose_users').hide(); $('selected_users').hide();" }  %> alle
		<%= radio_button_tag :recipients, "active", false, { :onclick => "$('choose_users').hide(); $('selected_users').hide();" } %> aktive
		<%= radio_button_tag :recipients, "passive", false, { :onclick => "$('choose_users').hide(); $('selected_users').hide();" } %> passive
		<%= radio_button_tag :recipients, "select", false, { :onclick => "$('choose_users').show(); $('selected_users').show();" } %> auswählen
	</div>
	
	<div id="choose_users" style="display: none;">
		<%= label_tag "Eingabe:" %>
		<%= text_field_tag "user_name", nil, :class => 'editUserNames' %>
		<div id="user_choices" class="autocomplete"></div>
	</div>

	
	<div id="selected_users" style="position: relative; left: 215px; display: none;">
		<div>
		<ul>
			<li>Test User</li>
		</ul>
		</div>
	</div>
	
	<div style="position: relative;">
		<%= f.label "Betreff" %>
		<%= f.text_field :subject %>
	</div>
	
	<div>
		<%= f.label "Nachricht" %>
		<%= f.text_area :message %>
	</div>

	<div>
		<%= f.submit "Abschicken" %>
	</div>

	<% end %>
</div>

<div class="links">
	<%= link_to "Zurück", news_index_path %>
</div>

