<% include_tinymce %>
<h1>News</h1>

<div style="margin-top: 10px;">
<% if @news.empty? %>
	Zur Zeit gibt es keine Neuigkeiten.
<% else %>
	<%= render :partial => "news_table", :locals => { :news => @news }%>
	
	<div style="margin-top: 5px;">
		<hr/>
		<%= will_paginate @news %>
		<hr/>
	</div>
	
<% end %>
</div>

<% if permitted_to? :manage, :news %>
	<% content_for :sub_menu do %>
		<li class="side_bar"><%= link_to_function "News erstellen", "Glacier.Popup.init('" + new_news_path + ".ajax', {width: 700});" %></li>
	<% end %>
<% end %>