<h1>News</h1>

<div style="margin-top: 10px;">
<% if @news.empty? %>
	Zur Zeit gibt es keine Neuigkeiten.
<% else %>
	<%= render :partial => "news_table", :locals => { :news => @news }%>
	
	<div style="margin-top: 5px;">
		<hr/>
		<%= will_paginate @news %>
		<hr/>
	</div>
	
<% end %>
</div>

<% content_for :sub_menu do %>
	<% if permitted_to? :manage, :news %>
	<li class="side_bar"><%= link_to "News erstellen", new_news_path %></li>
	<% end %>
<% end %>