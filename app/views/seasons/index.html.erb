<h1>Saisons</h1>

<div style="margin-top: 10px;">
	<table class="default">
		<thead>
			<th>Saison</th>
			<th># Spiele</th>
			<th>Siege</th>
			<th>Niederlagen</th>
			<th>Unentschieden</th>
			<th>Tore</th>
			<th>Gegentore</th>
		</thead>
		
		<% for season in @seasons %>
			<tr>
				<td><%= link_to season.to_s, statistics_season_path(season) %></td>
				<td><%= season.games_played.size %></td>
				<td><%= season.wins.size %></td>
				<td><%= season.defeats.size %></td>
				<td><%= season.tied_games.size %></td>
				<td><%= season.scored_goals %></td>
				<td><%= season.goals_against %></td>
			</tr>
		<% end %>
	</table>
</div>